{
    "name": "uafrica/oauth-server",
    "description": "OAuth Server for CakePHP 3 using the PHP League's OAuth2 Server",
    "type": "cakephp-plugin",
    "keywords": ["cakephp", "oauth", "oauth2", "oauth server", "oauth2 server"],
    "require": {
        "php": ">= 5.5",
        "cakephp/cakephp": "~3.0",
        "league/oauth2-server": "6.*",
        "cakephp/migrations": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "cakephp/cakephp-codesniffer": "^2.3"
    },
    "autoload": {
      "psr-4": {
        "OAuthServer\\": "src"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "Cake\\Test\\": "./vendor/cakephp/cakephp/tests",
        "OAuthServer\\Test\\": "tests"
      }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Walther Lalk",
            "email": "walther@uafrica.com"
        }
    ]
}
